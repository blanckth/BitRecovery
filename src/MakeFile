# BitRecovery Makefile (Optimized & Modular)
CC      := gcc
CFLAGS  := -Wall -Wextra -std=c99 -g
LDFLAGS := 

# Output binary
OUT     := ../test/recover

# Source files
SRC := \
	main.c \
	utils/times/times.c \
	modules/image/image.c \
	modules/disk/disk.c \
	modules/disk/sector/sector.c

# Object files
OBJ := $(SRC:.c=.o)

# Default target
all: $(OUT)

# Linking
$(OUT): $(OBJ)
	@mkdir -p $(dir $(OUT))
	$(CC) $(CFLAGS) $(OBJ) -o $@ $(LDFLAGS)
	@echo "âœ… Build complete: $(OUT)"

# Compilation of each .c file to .o
%.o: %.c
	$(CC) $(CFLAGS) -c $< -o $@

# Clean object and binary
clean:
	rm -f $(OBJ) $(OUT)
	@echo "ðŸ§¹ Cleaned build files."

# Rebuild everything from scratch
rebuild: clean all

.PHONY: all clean rebuild



gcc -o test/bitrecovery \
    src/main.c \
    src/utils/times/times.c \
    src/modules/image/image.c \
    src/modules/disk/disk.c \
    src/modules/disk/sector/sector.c \
    src/modules/disk/partition/partition.c \
    -I src/modules/disk \
    -I src/modules/disk/sector \
    -I src/modules/disk/partition \
    -I src/utils/times \
    -I src/modules/image